{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"compileOnSave": true,
	"include": [
		"src",
		"types"
	]
}
