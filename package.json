{
  "private": true,
  "workspaces": [
    "functions",
    "web"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Api run build",
    "deploy": "firebase deploy --only functions",
    "lint": "run-p 'lint:*' && yarn workspaces foreach -Api run lint",
    "lint:oxlint": "oxlint --type-aware",
    "lint:fmt": "oxfmt --check",
    "fmt": "oxfmt"
  },
  "dependencies": {
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "oxlint-tsgolint": "^0.11.5"
  },
  "engines": {
    "node": ">=24",
    "yarn": ">=4.12.0"
  },
  "packageManager": "yarn@4.12.0"
}
